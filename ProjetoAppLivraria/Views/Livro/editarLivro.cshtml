@model ProjetoAppLivraria.Models.Livro

@{
    ViewData["Title"] = "Editar Livro";
}

<h1>Editar Livro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="editarLivro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="codLivro" type="hidden" class="form-control" />
                <span asp-validation-for="codLivro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.refAutor.Id, ViewBag.ListaAutores as SelectList,
                             "Selecione o autor",
                             htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="nomeLivro" class="control-label"></label>
                <input asp-for="nomeLivro" class="form-control" />
                <span asp-validation-for="nomeLivro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
