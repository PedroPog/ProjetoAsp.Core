@model ProjetoAppLivraria.Models.Livro

@{
    ViewData["Title"] = "Cadastrar Livro";
}

<h1>Cadastrar Livro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadLivro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.refautor.idautor, ViewBag.ListaAutores as SelectList,
                        "Selecione o autor",
                    htmlAttributes: new {@class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                <label asp-for="namelivro" class="control-label"></label>
                <input asp-for="namelivro" class="form-control" />
                <span asp-validation-for="namelivro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
